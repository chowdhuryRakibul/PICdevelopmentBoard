#include <main.h>
#define LCD_ENABLE_PIN PIN_D2
#define LCD_RS_PIN PIN_D0
#define LCD_RW_PIN PIN_D1
#define LCD_DATA4 PIN_D4
#define LCD_DATA5 PIN_D5
#define LCD_DATA6 PIN_D6
#define LCD_DATA7 PIN_D7

#bit C1=0xF81.7     //Assigning Columns of Keypad to PORT D
#bit C2=0xF81.6
#bit C3=0xF81.5
#bit C4=0xF81.4
#bit R1=0xF81.3    //Assigning the rows of Keypad to PORT D
#bit R2=0xF81.2
#bit R3=0xF81.1
#bit R4=0xF81.0
/*
#bit C1=0xF8A.0     //Assigning Columns of Keypad to PORT D
#bit C2=0xF8A.1
#bit C3=0xF8A.2
#bit C4=0xF8A.3
#bit R1=0xF8A.7    //Assigning the rows of Keypad to PORT D
#bit R2=0xF8A.6
#bit R3=0xF8A.5
#bit R4=0xF8A.4
*/
#bit TRIS_C1=0xF93.7                //Setting the TRIS  pins of PORT D
#bit TRIS_C2=0xF93.6
#bit TRIS_C3=0xF93.5
#bit TRIS_C4=0xF93.4
#bit TRIS_R1=0xF93.3
#bit TRIS_R2=0xF93.2
#bit TRIS_R3=0xF93.1
#bit TRIS_R4=0xF93.0


#include <lcd.c>
char keypad();
void main()
{
  

   lcd_init();

   lcd_putc("\fReady...\n");
   TRIS_R1=TRIS_R2=TRIS_R3=TRIS_R4=0;  //Set all rows pin as output mode
   TRIS_C1=TRIS_C2=TRIS_C3=TRIS_C4=1;          //Set all coloumn as input mode

   while(TRUE)
   {
      k=keypad();
      if(k!=0)
      {
         lcd_gotoxy(1, 2);
         lcd_putc(k);
      }
     
   }

}



char keypad()
{
while(TRUE)
{
//Scannign key if row1 is high
     R1=0;                                           //Scanning Process
     R2=R3=R4=1;
     if(C1==0)
     {
         while(C1==0);
         return '1';
     }
      else if(C2==0)
     {
         while(C2==0);
         return '2';
     }
     else if(C3==0)
     {
         while(C3==0);
         return '3';
     }
     else if(C4==0)
     {
         while(C4==0);
         return 'A';
     }
   //Scannning keys if Row 2 is high 
     R2=0;
     R1=R3=R4=1;
     if(C1==0)
     {
         while(C1==0);
         return '4';
     }
     else if(C2==0)
     {
         while(C2==0);
         return '5';
     }
     else if(C3==0)
     {
         while(C3==0);
         return '6';
     }
      else if(C4==0)
     {
         while(C4==0);
         return 'B';
     }
  //Scanning keys if row 3 is high 
     R3=0;
     R1=R2=R4=1;
     if(C1==0)
     {
         while(C1==0);
         return '7';
     }
      else if(C2==0)
     {
         while(C2==0);
         return '8';
     }
     else if(C3==0)
     {
         while(C3==0);
         return '9';
     }
      else if(C4==0)
     {
         while(C4==0);
         return 'C';
     }
   //Scanning keys if Row 4 is high 
     R4=0;
     R1=R2=R3=1;
     if(C1==1)
     {
         while(C1==0);
         return 'E';
     }
     else if(C2==0)
     {
          while(C2==0);
         return '0';
     }
     else if(C3==0)
     {
         while(C3==0);
         return 'F';
     }
      else if(C4==0)
     {
         while(C4==0);
         return 'D';
     }
}
}


