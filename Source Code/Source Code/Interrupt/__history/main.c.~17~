#include <main.h>

#INT_EXT1
void  EXT1_isr(void) 
{
   output_high(PIN_D6);
   delay_ms(1000);
   clear_interrupt(INT_EXT1);
   
}

#INT_EXT2
void  EXT2_isr(void) 
{
   output_high(PIN_D7);
   delay_ms(1000);
   clear_interrupt(INT_EXT2);
   
}

void main()
{
   setup_spi(FALSE); 
   enable_interrupts(GLOBAL);
   ext_int_edge(1,H_TO_L);
   ext_int_edge(2,H_TO_L);
   clear_interrupt(INT_EXT1);
   clear_interrupt(INT_EXT2);
   enable_interrupts(INT_EXT1);
   enable_interrupts(INT_EXT2);
   

   while(TRUE)
   {
      output_low(PIN_D6);
      output_low(PIN_D7);
      delay_ms(1000);
   }

}
